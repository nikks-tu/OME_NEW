<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassword"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/ll_root_view_forgot">
    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_layout_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:orientation="vertical"
            android:background="@drawable/three_side_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_margin="@dimen/margin_one"
                android:padding="@dimen/elarge_view_margin"
                android:text="@string/forgot_password"
                android:textSize="@dimen/activity_textSize_small"
                android:textColor="@color/white"
                tools:targetApi="lollipop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginRight="@dimen/margin_five"
                android:paddingLeft="@dimen/view_margin"
                android:paddingRight="@dimen/view_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_userNameforgot"
                    app:srcCompat="@drawable/user"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/large_view_margin"
                    android:paddingBottom="@dimen/large_view_margin"
                    android:paddingLeft="@dimen/margin_five"
                    android:paddingRight="@dimen/margin_five"
                    android:contentDescription="@string/app_name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/large_view_margin"
                    android:paddingBottom="@dimen/large_view_margin"
                    android:paddingLeft="@dimen/margin_five"
                    android:paddingRight="@dimen/margin_five"
                    android:hint="@string/email_id"
                    android:background="@null"
                    android:textColorHint="@color/text_color_light"
                    android:textColor="@color/text_color_light"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:id="@+id/edt_username_forgot"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginEnd="@dimen/view_margin"
                android:background="@color/colorPrimaryTrans"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_button_submit"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/large_view_margin"
                android:layout_marginRight="@dimen/large_view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:padding="@dimen/view_margin"
                android:background="@drawable/app_button_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:text="@string/submit"
                    android:layout_gravity="center"
                    android:padding="@dimen/margin_five"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/ll_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_five">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginLeft="@dimen/margin_two"
                        android:layout_marginRight="@dimen/margin_two">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textSize="@dimen/activity_textSize_extra_small"
                            android:id="@+id/tv_forgotPassword"
                            android:text="@string/click_here"
                            android:textColor="@color/text_color_light"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/text_color_light"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="@dimen/margin_two"
                        android:layout_marginRight="@dimen/margin_two"
                        android:textSize="@dimen/activity_textSize_extra_small"
                        android:id="@+id/tv_forgot"
                        android:text="@string/click_to_login"
                        android:textColor="@color/text_color_light"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>