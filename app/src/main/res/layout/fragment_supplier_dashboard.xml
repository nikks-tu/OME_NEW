<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_main_layout"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/ll_ads_1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/margin_five">
                        <com.techuva.ome_new.views.SimpleLayoutBanner
                            android:id="@+id/banner_admin1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white">

                        <com.flyco.pageindicator.indicator.FlycoPageIndicaor
                            xmlns:fpi="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/indicator_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="15dp"
                            android:paddingTop="20dp"
                            fpi:fpi_cornerRadius="5dp"
                            fpi:fpi_gap="3dp"
                            fpi:fpi_height="6dp"
                            fpi:fpi_selectColor="@color/blue_light"
                            fpi:fpi_unselectColor="@color/blue_light_op"
                            fpi:fpi_width="6dp" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orders_report"
                    android:textSize="@dimen/activity_textSize_large"
                    android:layout_margin="@dimen/margin_five"
                    android:id="@+id/tv_orders_heading"
                    android:background="@drawable/app_button_background"
                    android:padding="@dimen/view_margin"
                    android:textColor="@color/white"
                    />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rcv_totalOrders"
            android:layout_margin="@dimen/margin_five"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five"
                    android:id="@+id/cv_cons_order">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/consumer_orders_report"
                                    android:textSize="@dimen/activity_textSize_large"
                                    android:layout_margin="@dimen/margin_five"
                                    android:id="@+id/tv_cons_orders_heading"/>
                                <GridView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:id="@+id/rcv_consumerOrders"
                                    android:layout_marginLeft="@dimen/large_view_margin"
                                    android:layout_marginRight="@dimen/large_view_margin"
                                    android:visibility="gone"
                                    android:numColumns="2"
                                    android:verticalSpacing="@dimen/margin_one"
                                    android:horizontalSpacing="@dimen/margin_one"
                                    android:background="@color/colorPrimaryTrans"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_trans"
                                    android:layout_margin="@dimen/margin_five"
                                    android:id="@+id/ll_no_cons_order">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/no_orders"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/large_view_margin"
                                            android:paddingBottom="@dimen/large_view_margin"
                                            android:textSize="@dimen/activity_textSize_small"
                                            android:textColor="@color/colorPrimary"
                                            android:id="@+id/tv_no_orders_cons"/>
                                </LinearLayout>
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five"
                    android:id="@+id/cv_shopp_order">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/shopper_orders_report"
                                    android:textSize="@dimen/activity_textSize_large"
                                    android:layout_margin="@dimen/margin_five"
                                    android:id="@+id/tv_shopp_orders_heading"/>

                                <GridView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:id="@+id/rcv_shopperOrders"
                                    android:numColumns="2"
                                    android:visibility="gone"
                                    android:horizontalSpacing="@dimen/margin_one"
                                    android:verticalSpacing="@dimen/margin_one"
                                    android:layout_marginLeft="@dimen/large_view_margin"
                                    android:layout_marginRight="@dimen/large_view_margin"
                                    android:background="@color/colorPrimaryTrans"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_trans"
                                    android:layout_margin="@dimen/margin_five"
                                    android:id="@+id/ll_no_shopp_order">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/no_orders"
                                            android:gravity="center"
                                            android:id="@+id/tv_no_orders_shopp"
                                            android:paddingTop="@dimen/large_view_margin"
                                            android:paddingBottom="@dimen/large_view_margin"
                                            android:textSize="@dimen/activity_textSize_small"
                                            android:textColor="@color/colorPrimary"/>
                                </LinearLayout>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>