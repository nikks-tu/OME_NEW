<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.ChangePassword"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_green"
        android:gravity="center"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:layout_margin="@dimen/margin_one"
        android:padding="@dimen/view_margin"
        android:text="@string/change_pass"
        android:id="@+id/tv_change_password"
        android:textSize="@dimen/activity_textSize_small"
        android:textColor="@color/white"
        tools:targetApi="lollipop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/view_margin">
        <LinearLayout

            android:id="@+id/ll_layout_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_view_margin"
            android:layout_marginEnd="@dimen/large_view_margin"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/view_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/large_view_margin"
                        android:hint="@string/old_password"
                        android:background="@null"
                        android:textColorHint="@color/text_color_table"
                        android:textColor="@color/text_color_light"
                        android:inputType="textPassword"
                        android:id="@+id/edt_oldPassword"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/view_margin"
                        android:layout_marginEnd="@dimen/view_margin"
                        android:background="@color/colorPrimaryTrans"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/large_view_margin"
                        android:hint="@string/new_password"
                        android:background="@null"
                        android:textColorHint="@color/text_color_table"
                        android:textColor="@color/text_color_light"
                        android:inputType="textPassword"
                        android:id="@+id/edt_newPassword"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/view_margin"
                        android:layout_marginEnd="@dimen/view_margin"
                        android:background="@color/colorPrimaryTrans"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/large_view_margin"
                        android:hint="@string/confirm_password"
                        android:background="@null"
                        android:textColorHint="@color/text_color_table"
                        android:textColor="@color/text_color_light"
                        android:inputType="textPassword"
                        android:id="@+id/edt_confPassword"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:background="@color/colorPrimaryTrans"
                    android:layout_marginBottom="@dimen/margin_five"/>

                <LinearLayout
                    android:id="@+id/ll_update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/large_view_margin"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_margin"
                    android:paddingBottom="@dimen/view_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:id="@+id/tv_update_password"
                        android:letterSpacing="0.1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_textSize_extra_small"
                        android:text="@string/update_password"
                        android:padding="@dimen/margin_five"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>