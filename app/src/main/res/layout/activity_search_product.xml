<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SearchProductActivity"
    android:id="@+id/fl_main">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv_product_search_list"
        android:background="@color/white"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/small_image_view"
        android:id="@+id/ll_no_product_found">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_no_products"
            android:text="@string/no_product_by_key"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:padding="@dimen/margin_five"
        android:id="@+id/ll_bottom_view"
        android:visibility="gone">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/colorPrimary">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/selected_company"
                   android:id="@+id/tv_comp_heading"
                   android:layout_margin="@dimen/margin_two"
                   android:textSize="@dimen/activity_textSize_small_14"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/colon"
                   android:layout_marginTop="@dimen/margin_two"
                   android:layout_marginBottom="@dimen/margin_two"
                   android:layout_marginLeft="@dimen/margin_five"
                   android:layout_marginRight="@dimen/margin_five"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/selected_company"
                   android:id="@+id/tv_company_name"
                   android:layout_margin="@dimen/margin_two"
                   android:textColor="@color/white"
                   android:gravity="end"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/colorPrimary">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/items_in_cart"
                   android:id="@+id/tv_items_in_cart_txt"
                   android:layout_margin="@dimen/margin_two"
                   android:textSize="@dimen/activity_textSize_small_14"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/colon"
                   android:layout_marginTop="@dimen/margin_two"
                   android:layout_marginBottom="@dimen/margin_two"
                   android:layout_marginLeft="@dimen/margin_five"
                   android:layout_marginRight="@dimen/margin_five"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/selected_company"
                   android:id="@+id/tv_items_in_cart"
                   android:layout_margin="@dimen/margin_two"
                   android:textColor="@color/white"
                   android:gravity="end"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/colorPrimary">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/total_cart_value"
                   android:id="@+id/tv_total_cart_value_txt"
                   android:layout_margin="@dimen/margin_two"
                   android:textSize="@dimen/activity_textSize_small_14"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/colon"
                   android:layout_marginTop="@dimen/margin_two"
                   android:layout_marginBottom="@dimen/margin_two"
                   android:layout_marginLeft="@dimen/margin_five"
                   android:layout_marginRight="@dimen/margin_five"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/selected_company"
                   android:id="@+id/tv_total_cart_value"
                   android:layout_margin="@dimen/margin_two"
                   android:textColor="@color/white"
                   android:gravity="end"/>

           </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.8"
            android:layout_margin="@dimen/margin_five"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/ll_cart">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:id="@+id/tv_cart_btn"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_small"
                android:paddingRight="@dimen/view_margin"
                android:paddingLeft="@dimen/view_margin"
                android:textColor="@color/menu_text_color"/>
        </LinearLayout>
    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:visibility="gone"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:visibility="gone">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/items_in_cart"
                  android:layout_marginLeft="@dimen/large_view_margin"
                  android:layout_marginRight="@dimen/margin_two"
                  android:textColor="@color/text_color_light"/>
              <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tv_items_in"
              android:layout_marginRight="@dimen/margin_two"
                  android:layout_marginLeft="@dimen/margin_two"
              android:textColor="@color/text_color_light"/>
          </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proceed_to_checkout"
                android:textColor="@color/menu_text_color"
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_large"
                android:id="@+id/tv_proceed_to_checkout"
                android:background="@drawable/btn_background"
                android:padding="@dimen/view_margin"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"
                android:layout_marginLeft="@dimen/large_view_margin"
                android:layout_marginRight="@dimen/large_view_margin"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/internetConnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtInternetConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="@string/check_internet_connection"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/activity_textSize_large"
            />

        <Button
            android:id="@+id/internetRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtInternetConnection"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/retry"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_serverError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_serverError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="@string/error_connecting_server"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/activity_textSize_large"
            />

        <Button
            android:id="@+id/btn_serverConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_serverError"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/retry"
            />
    </RelativeLayout>

</FrameLayout>