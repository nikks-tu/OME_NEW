<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.YourOrdersActivity"
    android:orientation="vertical"
    android:background="@color/white">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/ll_main"
       android:visibility="visible"
       android:background="@color/white">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingTop="@dimen/margin_five"
           android:paddingBottom="@dimen/margin_five"
           android:layout_marginRight="@dimen/margin_two"
           android:layout_marginLeft="@dimen/margin_two"
           android:background="@color/white">
           <LinearLayout
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/black"
               android:padding="@dimen/margin_two"
               android:id="@+id/ll_dealers"
               android:layout_margin="@dimen/margin_five">
               <Spinner
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/lv_dealers_list"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:background="@null"
                   android:layout_weight="1"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="0.2"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/down_white"
                   android:padding="@dimen/margin_five"
                   android:id="@+id/iv_dealer_dropdown"
                   android:layout_gravity="center"/>
           </LinearLayout>
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/fl_search_company"
               android:background="@drawable/button_background_blue"
               android:padding="@dimen/margin_five"
               android:orientation="horizontal"
               android:layout_margin="@dimen/margin_five"
               android:visibility="gone">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/search"
                   android:id="@+id/edt_search"
                   android:background="@null"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   app:srcCompat="@drawable/search_product"
                   android:layout_gravity="end|center"
                   android:id="@+id/iv_search"/>
           </FrameLayout>
           <LinearLayout
               android:visibility="visible"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/top_bar_green"
               android:layout_margin="@dimen/margin_five"
               android:id="@+id/ll_statuses"
               android:padding="@dimen/margin_two">
               <Spinner
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/lv_status_list"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:background="@null"
                   android:layout_weight="1"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="0.2"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/down_white"
                   android:layout_gravity="center"
                   android:padding="@dimen/margin_five"
                   android:id="@+id/iv_status_dropdown"/>
           </LinearLayout>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@color/white">
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/rcv_orderList"
               android:visibility="gone"
               android:background="@color/white"/>
           <ListView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/lv_orderList"
               android:visibility="visible"
               android:background="@color/white"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:id="@+id/ll_noData"
               android:gravity="center"
               android:layout_gravity="center"
               android:visibility="gone"
               android:background="@color/white">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textSize="@dimen/activity_textSize_small_16"
                   android:textColor="@color/menu_text_color"
                   android:text="@string/no_orders_available" />

           </LinearLayout>
       </LinearLayout>



   </LinearLayout>

</LinearLayout>