<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cv_day_view"
    android:elevation="2dp"
    android:layout_margin="@dimen/margin_three"
    tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryTrans"
        android:padding="@dimen/margin_five">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/activity_textSize_large_thirty"
            android:textColor="@color/menu_text_color"
            android:layout_margin="@dimen/margin_two"
            android:id="@+id/tv_order_count"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/activity_textSize_large"
            android:textColor="@color/menu_text_color"
            android:layout_margin="@dimen/margin_two"
            android:id="@+id/tv_order_status"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>