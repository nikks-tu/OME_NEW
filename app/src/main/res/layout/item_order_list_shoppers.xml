<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_three"
    android:layout_marginRight="@dimen/margin_five"
    android:layout_marginLeft="@dimen/margin_five"
    android:layout_marginBottom="@dimen/margin_three"
    android:background="@color/white">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_seventy_five"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_two"
        android:id="@+id/iv_product_image"
        android:layout_weight="0.2"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/product_name"
                android:textAllCaps="true"
                android:textSize="@dimen/activity_textSize_small_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/margin_two"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textColor="@color/menu_text_color"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/activity_textSize_small_14"
                android:layout_weight="1"
                android:text = "csdddddd"
                android:gravity="center|end"
                android:layout_gravity="end|center"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_marginLeft="@dimen/margin_five"
                android:textColor="@color/menu_text_color"
                android:layout_margin="@dimen/margin_two"
                android:paddingRight="@dimen/view_margin"
                android:id="@+id/tv_order_date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="@string/product_desc"
                android:layout_weight="1"
                android:textSize="@dimen/activity_textSize_small_13"
                android:textColor="@color/menu_text_color"
                android:layout_margin="@dimen/margin_two"/>

            <TextView
                android:id="@+id/tv_product_qty"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="@string/qty"
                android:textSize="@dimen/activity_textSize_small_13"
                android:textColor="@color/menu_text_color"
                android:layout_margin="@dimen/margin_two"
                android:paddingRight="@dimen/view_margin"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_amount">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_dealers_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dealer_name"
                    android:layout_gravity="center"
                    android:textSize="@dimen/activity_textSize_small_13"
                    android:textColor="@color/menu_text_color"
                    android:layout_margin="@dimen/margin_two"/>
                <TextView
                    android:id="@+id/tv_total_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dealer_name"
                    android:layout_gravity="center"
                    android:textSize="@dimen/activity_textSize_small_13"
                    android:textColor="@color/menu_text_color"
                    android:layout_margin="@dimen/margin_two"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_disp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:textColor="@color/menu_text_color"
                    android:visibility="visible"
                    android:layout_margin="@dimen/margin_two"
                    android:paddingRight="@dimen/view_margin"
                    android:textSize="@dimen/activity_textSize_small_13" />
                <TextView
                    android:id="@+id/txt_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_two"
                    android:gravity="center"
                    android:visibility="visible"
                    android:drawableRight="@drawable/down_white"
                    android:drawablePadding="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:textSize="@dimen/activity_textSize_small_13" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">



       <!--     <Spinner
                android:id="@+id/spin_order_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/margin_two"
                android:gravity="center|bottom"
                android:padding="@dimen/view_margin"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_textSize_small_16" />-->




        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_five"
        android:visibility="gone"
        android:layout_gravity="end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_textSize_small_13"
            android:text = "jhhhbj"
            android:visibility="gone"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/menu_text_color"
            android:id="@+id/tv_qty"
            android:layout_margin="@dimen/margin_two"/>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
