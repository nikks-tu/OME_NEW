<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/side_border"
    android:layout_margin="@dimen/margin_five">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:background="@color/menu_text_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_alertText"
            android:textAlignment="center"
            android:text="@string/no_dealer_map_msg"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:id="@+id/button_yes"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_weight="1"
              android:layout_marginTop="20dp"
              android:text="@string/ok_txt"
              android:layout_marginBottom="@dimen/view_margin"
              android:padding="@dimen/view_margin"
              android:layout_marginLeft="@dimen/margin_five"
              android:layout_marginRight="@dimen/large_view_margin"
              android:background="@drawable/side_border"
              android:textColor="@color/colorPrimary" />
      </LinearLayout>

    </LinearLayout>

</LinearLayout>