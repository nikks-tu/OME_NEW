<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="@dimen/view_margin"
    tools:targetApi="lollipop"
    app:cardCornerRadius="0dp"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_marginBottom="@dimen/view_margin"
        android:layout_marginLeft="@dimen/margin_five"
        android:layout_marginRight="@dimen/margin_five">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_channel_value"
            android:gravity="center|center_vertical"
            android:layout_gravity="start"
            android:textSize="@dimen/activity_textSize_large_thirty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:layout_gravity="end"
            android:gravity="center"
            android:textColor="@color/text_color_light"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_channel_name"
            android:textSize="@dimen/activity_textSize_small"
            android:padding="@dimen/margin_five"
            android:fontFamily="@fonts/AvenirLTStd-Light.otf"
            tools:targetApi="jelly_bean"
            android:textAllCaps="false"/>

    </FrameLayout>

</LinearLayout>
